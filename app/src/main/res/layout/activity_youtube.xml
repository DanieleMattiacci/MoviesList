<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dip" />

  
    <TextView
        android:id="@+id/titolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titolo_canzone"
        android:layout_alignRight="@+id/youtube_view"
        android:layout_below="@+id/titolo_canzone"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textSize="15sp" />

     <TextView
        android:id="@+id/descrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/descrizione_video"
        android:layout_alignRight="@+id/youtube_view"
        android:layout_below="@+id/descrizione_video"
        android:layout_marginTop="16dp"

        android:textColor="#000000"
        android:textSize="15sp" />

     <TextView
         android:id="@+id/descrizione_video"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/titolo"
         android:layout_below="@+id/titolo"
         android:layout_marginTop="24dp"
         android:text="@string/video_description"
         android:textColor="#000000"
         android:textSize="19sp"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/titolo_canzone"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/youtube_view"
         android:layout_below="@+id/youtube_view"
         android:text="@string/video_title"
         android:textColor="#000000"
         android:textSize="19sp"
         android:textStyle="bold" />
</RelativeLayout>
</ScrollView>